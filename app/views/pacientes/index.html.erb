<h1 class="h2 mb-2 text-gray-800">Registro de Pacientes</h1>

<div>  
  <%= link_to  new_paciente_path, {remote: true, class: "btn btn-info", id: "anadir-pacientes-btn"}  do %>
    <span class="fas fa-plus-square" ></span>
  <% end %>
</div>
<br />

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
       <table id="tablaPacientes" class="table table-bordered" width="100%">
         <thead>
           <tr>
             <th>DNI</th>
             <th>Nombre</th>
             <th>Apellido</th>
             <th>Sexo</th>
             <th>Telefono</th>
             <th>Direccion</th>
             <th></th>
           </tr>
         </thead>
         <tbody>
         <% @pacientes.each do |paci| %>
            <tr id="paciente_<%= paci.id %>" >
                <td><%= paci.dni %></td>
                <td><%= paci.nombre %></td>
                <td><%= paci.apellido %></td>
                <td><%= paci.sexo %></td>
                <td><%= paci.telefono %></td>
                <td><%= paci.direccion %></td>
                <td>
                <%= link_to 'editar', edit_paciente_path(paci), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                <%= link_to 'Borrar', paci, remote: true, method: :delete, data: { confirm: "Â¿borrar al paciente: #{paci.nombre}?"}, class: "btn btn-danger btn-xs" %>
                </td>
            </tr>
         <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>

<%= render 'modal_pacientes' %>