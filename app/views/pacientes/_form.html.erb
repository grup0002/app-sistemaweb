       <%= f.text_field :apellido, {:class=> "form-control", :placeholder=>"Introduzca el apellido del paciente..."} %>        
       <%if @paciente.errors[:apellido].any? %>
         <p class="bg-danger"><%= @paciente.errors[:apellido].to_s[/\w([^"]*)/] %></p>
       <% end %>    
     </div>
      </div>

      <div class="item form-group<%= @paciente.errors[:sexo].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :sexo, "sexo del Paciente: " %>
      <div class="input-group">
