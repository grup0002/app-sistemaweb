        <p class="bg-danger"><%= @paciente.errors[:telefono].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
     </div>

     <div class="item form-group<%= @paciente.errors[:direccion].any? ? ' has-error has-feedback' : '' %>">
     <%= f.label :direccion, "direccion deL Paciente: " %>
     <div class="input-group">
       <%= f.text_field :direccion, {:class=> "form-control", :placeholder=>"Introduzca el direccion del paciente..."} %>        
       <%if @paciente.errors[:direccion].any? %>
         <p class="bg-danger"><%= @paciente.errors[:direccion].to_s[/\w([^"]*)/] %></p>
       <% end %>    
     </div>
      </div>


    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <%= f.submit @paciente.new_record? ? "Crear Paciente" : "Actualizar Paciente", :class => "btn btn-success"%>
    </div>  
<% end %>   