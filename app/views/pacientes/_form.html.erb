<%= form_for @paciente, remote: true do |f| %>
    <div class="form-group">
      <h4 class="control-label">Datos de Pacientes:</h4>
    </div>

    <div class="item form-group<%= @paciente.errors[:dni].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :dni, "dni del paciente: " %>
      <div class="input-group">
        <%= f.text_field :dni, {:class=> "form-control", :placeholder=>"Introduzca el dni del paciente..."} %>        
        <%if @paciente.errors[:dni].any? %>
          <p class="bg-danger"><%= @paciente.errors[:dni].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @paciente.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :nombre, "Nombre del Paciente: " %>
    <div class="input-group">
      <%= f.text_field :nombre, {:class=> "form-control", :placeholder=>"Introduzca el nombre del paciente..."} %>        
      <%if @paciente.errors[:nombre].any? %>
        <p class="bg-danger"><%= @paciente.errors[:nombre].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
     </div>

     <div class="item form-group<%= @paciente.errors[:apellido].any? ? ' has-error has-feedback' : '' %>">
