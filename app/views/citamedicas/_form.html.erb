<%= form_for @citamedica, { remote: true, multipart: true }  do |f| %>

    <div class="form-group">
      <h4 class="control-label">Datos de Cita Medica Clinicas:</h4>
    </div>

    <div class="item form-group<%= @citamedica.errors[:hcita].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :hcita, "Hora de la cita: " %>
      <div class="input-group">
        <%= f.text_field :hcita, {:class=> "form-control", :placeholder=>"Introduzca la hora de la cita..."} %>        
        <%if @citamedica.errors[:hcita].any? %>
          <p class="bg-danger"><%= @citamedica.errors[:hcita].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @citamedica.errors[:fcita].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :fcita, "Fecha de la cita: " %>
    <div class="input-group">
      <%= f.text_field :fcita, {:class=> "form-control", :placeholder=>"Introduzca la hora de la fecha..."} %>        
      <%if @citamedica.errors[:fcita].any? %>
        <p class="bg-danger"><%= @citamedica.errors[:fcita].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
    
  </div>
  <div class="item form-group<%= @citamedica.errors[:consultorio].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :consultorio, "Descripción del la consulta: " %>
  <div class="input-group">
    <%= f.text_area :consultorio, {class: "form-control", :placeholder=>"Introduzca la descripción de la consulta..."} %>
    <%if @citamedica.errors[:consultorio].any? %>
      <p class="bg-danger"><%= @citamedica.errors[:consultorio].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

<div class="item form-group<%= @citamedica.errors[:paciente].any? ? ' has-error has-feedback' : '' %>">
  <%= f.label :paciente, "Paciente: " %>
  <div class="input-group">
  <%= collection_select(:citamedica, :paciente_id, @pacientes, :id, :nombre,  {:prompt => 'Seleccione el paciente'}, { class: "btn btn-secondary dropdown-toggle" })%>
    <%if @citamedica.errors[:paciente].any? %>
      <p class="bg-danger"><%= @citamedica.errors[:paciente].to_s[/\w([^"]*)/] %></p>
    <% end %>
  </div>
</div>

 

<div class="item form-group<%= @citamedica.errors[:doctor].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :doctor, "doctor: " %>
    <div class="input-group">
    <%= collection_select(:citamedica, :doctor_id, @doctores, :id, :nombre,  {:prompt => 'Seleccione el doctor'}, { class: "btn btn-secondary dropdown-toggle" })%>
      <%if @citamedica.errors[:doctor].any? %>
        <p class="bg-danger"><%= @citamedica.errors[:doctor].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>


    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <%= f.submit @citamedica.new_record? ? "Crear Cita Medica" : "Actualizar Cita Medica", :class => "btn btn-success"%>
    </div>  
  <% end %>