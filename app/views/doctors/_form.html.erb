      <%= f.text_field :telefono, {:class=> "form-control", :placeholder=>"Introduzca el telefono del doctor..."} %>        
      <%if @doctor.errors[:telefono].any? %>
        <p class="bg-danger"><%= @doctor.errors[:telefono].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
     </div>

     <div class="item form-group<%= @doctor.errors[:direccion].any? ? ' has-error has-feedback' : '' %>">
     <%= f.label :direccion, "direccion deL doctor: " %>
