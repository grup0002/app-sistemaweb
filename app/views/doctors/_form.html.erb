    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <%= f.submit @doctor.new_record? ? "Crear Doctor" : "Actualizar Doctor", :class => "btn btn-success"%>
    </div>  
<% end %>   