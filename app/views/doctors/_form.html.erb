<%= form_for @doctor, remote: true do |f| %>
    <div class="form-group">
      <h4 class="control-label">Datos de Doctores:</h4>
    </div>

    <div class="item form-group<%= @doctor.errors[:cedula].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :cedula, "cedula del doctor: " %>
      <div class="input-group">
        <%= f.text_field :cedula, {:class=> "form-control", :placeholder=>"Introduzca la cedula del doctor..."} %>        
        <%if @doctor.errors[:cedula].any? %>
          <p class="bg-danger"><%= @doctor.errors[:cedula].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @doctor.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
