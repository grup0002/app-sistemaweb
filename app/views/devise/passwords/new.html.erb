<h2>Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html_options: {class: "user"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control form-control-user"%>
  </div>

  <div class="form-group">
    <%= f.submit "Enviarme restablecer instrucciones de contraseña", class: "btn btn-primary btn-user btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
